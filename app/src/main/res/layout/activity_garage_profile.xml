<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgGarageProfile"
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/carageimage"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="-2dp" />

    <TextView
        android:id="@+id/txtNameGarage"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="UserName"
        android:textAlignment="center"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="271dp" />

    <TextView
        android:id="@+id/txtPhoneGarage"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"

        android:text="Phone Number"
        android:textAlignment="center"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="343dp" />


    <TextView
        android:id="@+id/txtLocGarage"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Location"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="404dp" />

    <Button
        android:id="@+id/btnAddService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_gravity="center|left"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:gravity="center"
        android:text="+"
        android:textColor="#FF3700B3"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="624dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecService"
        android:layout_width="415dp"
        android:layout_height="300dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_below="@id/btnAddService"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="467dp" />

</LinearLayout>